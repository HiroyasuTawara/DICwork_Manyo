<% if @label.errors.any? %>
  <div>
    <h2><%= @label.errors.count %>件のエラーが発生しました</h2>
    <ul>
      <% @label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @label, class: 'js-form', local: true) do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div>
    <%= f.select :color, { red: 'orangered', green: 'mediumseagreen', blue: 'royalblue', orange:'darkorange', gray: 'lightslategray', pink: 'hotpink' } %>
  </div>
  <div>
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
