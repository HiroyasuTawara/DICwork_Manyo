<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tr>
    <th>タスク名</th>
    <th>優先度</th>
    <th>状態</th>
    <th>ステータス変更</th>
    <th><%= link_to "終了期限でソート",tasks_path(sort_expired:"true") %></th>
    <th colspan="3"></th>
    <th><%= link_to "作成日でソート",tasks_path(sort_created:"true") %></th>
  </tr>
  <tbody>
    <% @tasks.each do |task| %>
      <tr class="task_row">
        <td><%= task.name.truncate(14) %></td>
        <td class="now_priolity"><%= task.priolity_i18n %></td>
        <td class="now_status"><%= task.status_i18n %></td>
        <td>
          <%= form_with(model: task, class: 'js-form', local: true) do |f| %>
            ...
            <%= f.select :priolity, { 低: 'low', 中: 'middle', 高: 'high', 最優先: 'top'} %>
            <%= f.select :status, { 未着手: 'waiting', 着手: 'working', 完了: 'completed'}%>
            <%= f.submit "変更" %>
          <% end %>
        </td>

        <td class="date">《<%= task.expired_at.strftime("%y年%m月%d日") %> 〆切》</td> 
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: '削除しますか?' } %></td>
        <td class="date">created at <%= task.created_at.strftime("%y-%m-%d") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
